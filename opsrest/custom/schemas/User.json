{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "User",
    "description": "User json representation",
    "additionalProperties": false,
    "properties": {
        "status": {
            "type": "object"
        },
        "statistics": {
            "type": "object"
        },
        "configuration": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 32,
                    "description": "Unix username"
                },
                "password": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Unix user password"
                }
            }
        }
    }
}
